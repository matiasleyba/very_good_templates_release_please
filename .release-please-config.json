{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "refactor","section": "Refactors" },
    { "type": "chore", "section": "Miscellaneous Chores" },
    { "type": "docs", "section": "Docs" }
  ],
  "pull-request-header": ":rotating_light: There are changes ready for release :rocket:\n\nâ„¹ Merge this PR once the team confirms the release is ready.\n",
  "pull-request-title-pattern": "chore(${component}): ${version}",
  "separate-pull-requests": true,
  "packages": {
    "very_good_core": {
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "version-file": "version.txt",
      "component": "very_good_core",
      "component-no-space": true,
      "extra-files": [
        "brick.yaml"
      ]
    }
  }
}